<h1>ログイン</h1>

<%= form_with(url: login_path) do |form| %>
  <div>
    <%= form.label :name, '名前', style: "display: block" %>
    <%= form.text_field :name, value: params[:name] %>
  </div>

  <div>
    <%= form.label :age, '年齢', style: "display: block" %>
    <%= form.text_field :age, value: params[:age] %>
  </div>

  <div>
    <%= form.submit 'ログイン' %>
  </div>
<% end %>